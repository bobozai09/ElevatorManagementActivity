<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/dotted_layout_gray"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_15dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="@dimen/activity_5dp"
            android:layout_height="match_parent"
            android:background="@color/color_main_right_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:id="@+id/text_res_l_sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp"
                android:text="电梯编号：12212121212"
                android:textSize="19dp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/text_res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp"
                android:text="电梯编号：12212121212"
                android:textSize="19dp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/text_res_l_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp"
                android:text="电梯编号：12212121212"
                android:textSize="19dp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/text_res_l_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_8dp"
                android:text="电梯编号：12212121212"
                android:textSize="19dp" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_15dp"
            android:background="@color/color_main_right_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_30dp"
                android:gravity="center"
                android:text="工单数量"
                android:textColor="@color/color_main_right_color"
                android:textSize="@dimen/activity_17dp" />

            <TextView
                android:id="@+id/text_tick_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="@color/color_main_right_color"
                android:textSize="@dimen/activity_25dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>