<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/item_title"/>
<include layout="@layout/item_order_message"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/activity_10dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_10dp"
        android:layout_marginLeft="@dimen/activity_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:lines="1"
                    android:text="故障设备："
                    android:layout_width="match_parent"
                    android:textSize="@dimen/activity_20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:lines="2"
                    android:text="渝中区.英丽国际023333333333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:lines="1"
                    android:text="故障来源："
                    android:layout_width="match_parent"
                    android:textSize="@dimen/activity_20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:lines="1"
                    android:text="告警模拟器"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:lines="1"
                    android:text="处理时限："
                    android:layout_width="match_parent"
                    android:textSize="@dimen/activity_20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:lines="1"
                    android:text="24小时"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
<Button
    android:id="@+id/additem"
    android:layout_width="wrap_content"
    android:text="add"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <management.elevator.com.elevatormanagementactivity.widget.UnderLineLinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="@dimen/activity_15dp"
            android:layout_width="wrap_content"
            android:id="@+id/underline_order_message"
            app:line_margin_side="25dp"
            app:line_dynamic_dimen="@dimen/activity_8dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>