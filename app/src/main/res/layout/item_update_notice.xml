<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rel_notice"
    android:layout_marginTop="@dimen/activity_5dp"
    android:paddingRight="@dimen/activity_8dp"
    android:paddingLeft="@dimen/activity_8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:background="@drawable/dotted_line_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_30dp">

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_8dp"
            android:src="@mipmap/icon_new_message" />

        <TextView
            android:id="@+id/text_no_see"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_8dp"
            android:layout_marginRight="@dimen/activity_8dp"
            android:gravity="center"
            android:text="忽略" />

        <TextView
            android:id="@+id/text_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/text_no_see"
            android:layout_toRightOf="@+id/img_show"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="" />


    </RelativeLayout>


</RelativeLayout>