<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/dotted_layout_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_15dp"
            android:paddingLeft="@dimen/activity_15dp"
            android:paddingRight="@dimen/activity_15dp">

            <TextView
                android:textSize="@dimen/activity_20dp"
                android:textColor="@color/color_text_color_teansaction"
                android:id="@+id/text_main_idx_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12333" />

            <TextView
                android:textSize="@dimen/activity_20dp"
                android:textColor="@color/color_text_color_teansaction"
                android:id="@+id/text_main_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_15dp"
                android:text="12333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/activity_15dp"
            android:paddingRight="@dimen/activity_15dp"
            android:paddingTop="@dimen/activity_15dp">

            <TextView
                android:id="@+id/text_main_need"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="12333"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/activity_17dp" />


        </LinearLayout>
<include layout="@layout/item_maintence_status_choose"/>

    </LinearLayout>
</LinearLayout>