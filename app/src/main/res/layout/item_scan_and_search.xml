<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_login_btn"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="40dp"

            android:layout_height="wrap_content"
            android:padding="@dimen/activity_10dp"
            android:src="@mipmap/scan_item" />

        <ImageView
            android:id="@+id/img_message_center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_8dp"
            android:padding="@dimen/activity_10dp"
            android:src="@mipmap/pop_bubble" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_message_center"
            android:layout_toRightOf="@+id/img_scan"
            android:gravity="center_vertical">

            <EditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/main_searchbox_shape"
            android:gravity="start|center_vertical"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingBottom="@dimen/activity_8dp"
            android:paddingLeft="@dimen/activity_8dp"
            android:paddingTop="@dimen/activity_8dp"
            android:maxLines="1"
            android:drawablePadding="@dimen/activity_5dp"
            android:textSize="12sp" />

