<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/color_head_bg"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_my_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_17dp"
                android:paddingTop="@dimen/activity_17dp"
                android:src="@mipmap/icon_my_head" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line_update_my_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_update_message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="@dimen/activity_8dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="修改资料"
                            android:textColor="@color/black_text_color"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:src="@mipmap/icon_more_one" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_bindphonenunmber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_bindphonenumber" />

                        <TextView
                            android:id="@+id/my_setting_phonenumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="@dimen/activity_8dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text=""
                            android:textColor="@color/black_text_color"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingRight="@dimen/activity_vertical_margin" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_my_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_mylocation" />

                        <TextView
                            android:id="@+id/text_mylocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="@dimen/activity_8dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="我的区域：江北区"
                            android:textColor="@color/black_text_color"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingRight="@dimen/activity_vertical_margin" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_update_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_update_password" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="重置密码"

                            android:textSize="15sp"
                            android:id="@+id/textView2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:src="@mipmap/icon_more_one" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_20dp"
                    android:background="@color/item_color" />

                <LinearLayout
                    android:id="@+id/line_message_of_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_mycontext" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="意见反馈"
                            android:textColor="@color/black_text_color"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:src="@mipmap/icon_more_one" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_safeofdev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_15dp"
                            android:src="@mipmap/icon_mysafe" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="@dimen/activity_8dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="关于电梯安全"
                            android:textColor="@color/black_text_color"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:src="@mipmap/icon_more_one" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_exit"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_20dp"
                    android:layout_marginRight="@dimen/activity_20dp"
                    android:layout_marginTop="@dimen/activity_20dp"
                    android:background="@drawable/login_btn_shape"
                    android:text="退 出"
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>