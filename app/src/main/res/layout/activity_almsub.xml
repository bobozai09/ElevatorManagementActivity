<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_8dp">

        <LinearLayout
            android:id="@+id/line_device_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sn_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="设备编号" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/activity_8dp"
                    android:src="@mipmap/icon_scan" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_8dp"
            android:id="@+id/line_trouble_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_15dp"
            android:paddingTop="@dimen/activity_15dp">
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:hint="1234"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/activity_8dp"
            android:paddingTop="@dimen/activity_8dp">

            <TextView
                android:paddingTop="@dimen/activity_8dp"
android:paddingBottom="@dimen/activity_8dp"
                android:id="@+id/edit_troule_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:hint="详细地址" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_8dp">

            <EditText
                android:id="@+id/edit_trouble_context"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="left|top"
                android:hint="请描述故障内容" />

        </LinearLayout>

        <LinearLayout
    android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_100dp">

            <ImageView

                android:id="@+id/img_phototake"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_phototake" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_add_almsub"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_20dp"
            android:layout_marginRight="@dimen/activity_20dp"
            android:layout_marginTop="@dimen/activity_20dp"
            android:background="@drawable/login_btn_shape"
            android:text="提 交"
            android:textColor="@color/color_white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>