<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/dotted_layout_gray"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="@dimen/activity_25dp"
            android:layout_marginBottom="@dimen/activity_25dp"
            android:layout_marginLeft="@dimen/activity_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:id="@+id/text_item_cell_name"
                android:textSize="@dimen/activity_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1233333333" />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/text_item_cell_daydate"
                android:textSize="@dimen/activity_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1233333333" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_25dp"
            android:layout_marginBottom="@dimen/activity_25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_weight="3"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_cell_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:src="@mipmap/icon_done" />

            <TextView
                android:id="@+id/text_cell_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_17dp"
                android:layout_marginRight="@dimen/activity_15dp"
                android:text="12344" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>